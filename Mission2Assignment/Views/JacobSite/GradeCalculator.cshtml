@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalculatorModel

<h2>Grade Calculator:</h2>
<br />

<form method="post">
    <label>Assignments:</label>
    <input id="asn" asp-for="Assignments" /><br />
    <label>Group Project:</label>
    <input id="gp" asp-for="GroupProject" /><br />
    <label>Quizzes:</label>
    <input id="qz" asp-for="Quizzes" /><br />
    <label>Exams:</label>
    <input id="ex" asp-for="Exams" /><br />
    <label>INTEX:</label>
    <input id="intx" asp-for="Intex" /><br />
    <br />

    <input id="submit" type="submit" value="Calculate Grade" />

    <div asp-validation-summary="All"></div>
</form>

<script src="js/GradeCalculator.js"></script>
